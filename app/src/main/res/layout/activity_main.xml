<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/screen"
        android:layout_width="265dp"
        android:layout_height="223dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#000000"
        android:ems="10"
        android:gravity="end|bottom"
        android:maxLength="12"
        android:textAlignment="textEnd"
        android:textColor="#2196F3"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        tools:ignore="MissingConstraints" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FF000000"
        android:gravity="fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        app:layout_goneMarginTop="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/allc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:onClick="acIT"
                android:text="AC"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/del"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="delIT"
                android:text="del"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/per"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="modIT"
                android:text="%"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/div"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="divIT"
                android:text="รท"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/svn"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="sevenIT"
                android:text="7"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/et"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="eightIT"
                android:text="8"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/nin"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="nineIT"
                android:text="9"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/mul"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="mulIT"
                android:text="x"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/fur"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="fourIT"
                android:text="4"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/fiv"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="fiveIT"
                android:text="5"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/six"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="sixIT"
                android:text="6"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/min"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="minIT"
                android:text="-"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/one"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="oneIT"
                android:text="1"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/two"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="twoIT"
                android:text="2"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/thr"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="treeIT"
                android:text="3"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/plu"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="addIT"
                android:text="+"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button

                android:id="@+id/history"
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="hisIT"
                android:text="H"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                app:iconTint="#000000" />

            <Button

                android:id="@+id/zer"
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="zeroIT"
                android:text="0"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/dt"

                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="dotIT"
                android:text="."
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <Button

                android:id="@+id/eql"
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:onClick="AnsIT"
                android:text="="
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>